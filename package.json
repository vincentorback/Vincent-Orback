{
  "name": "vincent-orback",
  "version": "6.0.0",
  "description": "My personal portfolio",
  "homepage": "https://www.vincentorback.se",
  "author": {
    "name": "Vincent Orback",
    "email": "hello@vincentorback.se",
    "url": "https://www.vincentorback.se"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vincentorback/vincent-orback.git"
  },
  "scripts": {
    "start": "if [ ! -d dist ]; then npm run build; fi && npm-run-all --parallel serve watch",
    "build:js": "esbuild src/assets/javascript/main.js --outfile=dist/assets/javascript/main.js --bundle --minify",
    "build:css": "postcss src/assets/css/style.css -o dist/assets/css/style.css",
    "build:html": "html-minifier --remove-comments --sort-attributes --sort-class-name --collapse-whitespace --remove-redundant-attributes --process-scripts 'application/ld+json' --minify-js true --output-dir dist --input-dir src --file-ext html",
    "build:webp": "imagemin ./dist/assets/images/{*.jpg,*.png} -p=webp -o=./dist/assets/images",
    "build:avif": "avif -e dist/assets/images/hyper-human.jpg -o dist/assets/images/hyper-human.avif",
    "build:light": "npm-run-all test:js test:css build:html build:js build:css compress",
    "build": "rm -rf dist && npm-run-all build:light move:images move:video move:fonts move:icons move:fonts compress:images build:webp",
    "move:images": "copyfiles -u 2 -f src/assets/images/* src/assets/images/**/* dist/assets/images",
    "move:video": "copyfiles -u 2 -f src/assets/video/* dist/assets/video",
    "move:icons": "copyfiles -u 2 -f src/assets/icons/* dist",
    "move:fonts": "copyfiles -u 2 src/assets/fonts/* dist/assets",
    "test:js": "standard 'src/assets/javascript/**/*.js'",
    "test:css": "stylelint 'src/assets/css/**/*.css'",
    "watch": "npm-run-all --parallel watch:js watch:css watch:html",
    "watch:js": "chokidar 'src/assets/javascript/**/*.js' -c 'npm run test:js && npm run build:js && npm run compress'",
    "watch:css": "chokidar 'src/assets/css/**/*.css' -c 'npm run test:css && npm run build:css && npm run compress'",
    "watch:html": "chokidar 'src/**/*.html' -c 'npm run build:html && npm run compress'",
    "serve": "serve dist -l 3000",
    "compress": "gzip dist/**/*.{css,js,html} --extension=gz --extension=br",
    "compress:images": "imageoptim dist/*",
    "deploy:light": "npm run build:light && copyfiles -u 1 src/sitemap.xml dist && copyfiles -u 1 src/.htaccess dist && copyfiles -u 1 src/robots.txt dist",
    "deploy": "npm run build && copyfiles -u 1 src/sitemap.xml dist && copyfiles -u 1 src/.htaccess dist && copyfiles -u 1 src/robots.txt dist"
  },
  "dependencies": {
    "macy": "^2.5.1",
    "paper": "0.11.3",
    "vanilla-lazyload": "^17.1.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.0.1",
    "chokidar-cli": "^2.1.0",
    "copyfiles": "^2.4.0",
    "esbuild": "^0.8.0",
    "gzip-cli": "^1.1.1",
    "html-minifier": "^4.0.0",
    "imagemin-cli": "^6.0.0",
    "imagemin-webp": "^6.0.0",
    "imageoptim-cli": "^3.0.2",
    "inline-source-cli": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.4",
    "postcss-calc": "^7.0.5",
    "postcss-cli": "^8.2.0",
    "postcss-csso": "^5.0.0",
    "postcss-custom-properties": "^10.0.0",
    "postcss-import": "^13.0.0",
    "serve": "^11.3.2",
    "standard": "^16.0.0",
    "stylelint": "^13.7.2",
    "stylelint-config-standard": "^20.0.0",
    "uglify-es": "^3.3.10"
  },
  "browserslist": [
    "> 2% in SE",
    "not ie <= 10"
  ],
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "postcss-custom-properties": {
        "preserve": true
      },
      "autoprefixer": {
        "grid": true
      },
      "postcss-calc": {
        "preserve": false
      },
      "postcss-csso": {}
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "max-empty-lines": 2,
      "number-leading-zero": "never",
      "unit-no-unknown": [
        true,
        {
          "ignoreUnits": "x"
        }
      ]
    }
  },
  "standard": {
    "ignore": [
      "src/assets/javascript/vendor/"
    ]
  }
}
